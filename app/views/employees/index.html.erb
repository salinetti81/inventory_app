<h1>Employees Index</h1>

<% i = 0 %>
<% @employee.each do |employee| %>
<% i += 1 %>
<tr>
  <td><%= i %>.</td>
  <td><%= employee.first_name %> <%= employee.last_name %></td>
  <td><%= employee.employee_id %></td>
  <td>
    <%= link_to 'View', employee_path(employee.id) %>
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_employee_path(employee.id) %>
      <%= link_to 'Delete', employee, :method => 'delete' %>
    <% end -%>
  </td>
</tr><br>
<% end -%>

<% if user_signed_in? %>
<p><%= link_to 'New employee', new_employee_path %> </p>
<% end -%>